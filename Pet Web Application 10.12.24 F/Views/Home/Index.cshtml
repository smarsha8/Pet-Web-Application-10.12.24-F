@model List<Pet_Web_Application_10._12._24_F.Models.CartItem>

@{
    ViewData["Title"] = "Home Page";
    var cartItems = Model ?? new List<Pet_Web_Application_10._12._24_F.Models.CartItem>(); // Initialize if null
}

<div>
    <h1>Fur Babbies And Supply One Stop Shop</h1>
    <p>Learn about building Web apps with ASP.NET Core.</p>
    <p>This Website Allows Donations, Adoptions of Fur Babbies, and Product to care for them.</p>
</div>

<div>
    <h2>Your Shopping Cart</h2>
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in cartItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity).ToString("C")</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.ProductId">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>Total: @ViewData["Total"]</p>
</div>

<div>
    <a asp-action="AddToCart" asp-route-id="1">Add Product 1 to Cart</a>
    <a asp-action="AddToCart" asp-route-id="2">Add Product 2 to Cart</a>
</div>

@section Scripts {
    <!-- Add any additional scripts here -->
}




